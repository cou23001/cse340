<% if (title) { %>
  <h1><%= title %></h1>
  <%- messages() %>
  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
  <div class="login">
    <form id="loginForm" action="/account/login" method="post">
      <label for="account_email">Username:</label>
      <input type="email" id="account_email" name="account_email" value = "<%= account_email %>" placeholder="Enter a valid email address" required>
    
      <label for="account_password">Password:</label>
      <div style="position: relative;">
          <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
          <i class="fas fa-eye-slash toggle-password-icon" id="toggle_password" onclick="togglePassword()"></i>
      </div>
      
      <button type="submit">Submit</button>
      <p>No account? <a href="/account/register">Sign up</a></p>
    </form>
  </div>
  
  <% } else {
    res.redirect('/')
} %>